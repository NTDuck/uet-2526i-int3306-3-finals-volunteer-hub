{
  "fmt": {
    "options": {
      "useTabs": false,
      "singleQuote": false
    }
  },
  "tasks": {
    "dev-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task dev",
    "build-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task build",
    "preview-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task preview",
    "prepare-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task prepare",
    "check-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task check",
    "check:watch-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task check:watch",
    "format-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task format",
    "lint-sveltekit-minimal": "cd ./frontend/sveltekit-minimal && deno task lint",
    
    "build-wasm": "wasm-pack build ./backend/bindings/wasm-bindings --out-dir ../output --out-name volunteer-hub --target deno"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
